{
  "name": "falixnodes",
  "version": "4.0.0-alpha-1",
  "description": "Accessing Falix, all from one place",
  "main": "src/assets/scripts/electronjs/index.js",
  "scripts": {
    "start": "electron --enable-transparent-visuals --disable-gpu --disable-software-rasterizer .",
    "build": "electron-builder build"
  },
  "author": "KorbsStudio",
  "license": "MIT",
  "dependencies": {
    "electron-context-menu": "^3.1.2",
    "electron-log": "^4.4.6",
    "electron-updater": "^4.6.5",
    "glasstron": "^0.1.1"
  },
  "devDependencies": {
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13"
  },
  "build": {
    "appId": "com.korbsstudio.falixnodes-desktop",
    "productName": "FalixNodes Desktop",
    "publish": {
      "provider": "generic",
      "url": "https://updates.korbsstudio.com/falixnodes-desktop/"
    },
    "win": {
      "target": [
        "nsis",
        "appx"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "snap",
        "AppImage"
      ],
      "maintainer": "package.korbsstudio.falixnodes",
      "category": "Network",
      "vendor": "Korbs Studio",
      "description": "Accessing Falix, all from one place"
    },
    "nsis": {
      "deleteAppDataOnUninstall": true,
      "shortcutName": "FalixNodes Desktop",
      "displayLanguageSelector": true,
      "oneClick": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": false
    }
  }
}
